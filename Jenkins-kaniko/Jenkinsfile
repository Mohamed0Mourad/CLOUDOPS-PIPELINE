pipeline {
    agent {
        kubernetes {
            yamlFile 'pod-template.yaml'
        }
    }

    environment {
        AWS_REGION      = 'us-east-1'
        ECR_REGISTRY    = '773893527461.dkr.ecr.us-east-1.amazonaws.com'
        ECR_REPOSITORY  = 'node-app-jenkins'
        TARGET_FOLDER   = 'nodeapp'
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/hosseldin/CLOUDOPS-APP-PIPELINE.git', branch: 'main'
            }
        }

        stage('Build Image') {
            steps {
                script {
                    def build = load "stages/build.groovy"
                    build()
                }
            }
        }

        stage('Scan Image') {
            steps {
                script {
                    def scan = load "stages/scan.groovy"
                    scan()
                }
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    def push = load "stages/push.groovy"
                    push()
                }
            }
        }

        stage('Notify') {
            steps {
                script {
                    def notify = load "stages/notify.groovy"
                    notify()
                }
            }
        }
    }
}
