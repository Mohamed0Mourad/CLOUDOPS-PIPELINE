pipeline {
    agent {
        kubernetes {
            yaml file('pod-template.yaml')
        }
    }

    environment {
        AWS_REGION = 'us-east-1'
        ECR_REGISTRY = '773893527461.dkr.ecr.us-east-1.amazonaws.com'
        ECR_REPOSITORY = 'node-app-jenkins'
        TARGET_FOLDER = 'nodeapp'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Scan') {
            steps {
                script {
                    // Load and execute from checked out repository
                    def buildScan = load "${WORKSPACE}/stages/build-scan.groovy"
                    buildScan.call()
                }
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    def pushEcr = load "${WORKSPACE}/stages/push-ecr.groovy"
                    pushEcr.call()
                }
            }
        }

        stage('Notify') {
            steps {
                script {
                    def notify = load "${WORKSPACE}/stages/notify.groovy"
                    notify.call()
                }
            }
        }
    }
}